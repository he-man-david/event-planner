{
  "name": "db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/db/src",
  "projectType": "library",
  "targets": {
    "stack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run db:docker", "nx run db:generate:schema", "nx run db:migrate"],
        "parallel": false
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f apps/backend/docker-compose.yml up -d"
      }
    },
    "generate:schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate --schema libs/db/src/schema.prisma"
      }
    },
    "migrate:dry": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma migrate dev --create-only --schema libs/db/src/schema.prisma"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate --schema libs/db/src/schema.prisma"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/db/**/*.ts"]
      }
    }
  },
  "tags": []
}
